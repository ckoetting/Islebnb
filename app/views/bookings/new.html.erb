<div class="form-wrapper">
  <div class="form-container">
    <h4 class="form-styling">
  Book your island now</h4>
<div class="flex-container">
  <div class="flex-item"></div>
<%= simple_form_for [@listing, @booking] do |f| %>
  <%= f.input :full_name %>
  <%= f.input :age %>
  <%= f.input :address %>
  <%= f.input :number_of_guests %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.input :message %>
  <%= f.button :submit %>
<% end %>
</div>
</div>
</div>
</div>
</div>