<div class="show-wrapper">
<!--   <div class="row">
    <h4 class="ml20"><%=@listing.title%></h4>
  </div> -->
  <div class="row">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner h-100">
          <%@listing.photos.each_with_index do |photo, index|%>
          <div class="carousel-item <%= index.zero? ? 'active' : '' %>">
            <%= cl_image_tag photo.key, class: "d-block w-100 h-100", height: 800, crop: 'fill' %>
          </div>
          <%end%>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  <div class="row ml20">
    <div class="col s8">
      <div class="d-flex">
      <div class="flex-grow-1 listings-title">
        <h6><%= @listing.title %> by full name </h6>
        <span><p>⭐️ reviews <%= @listing.address %></p></span>
      </div>
      <div class="listings-avatar"></div>
    </div>
    <hr>
    <ul>
      <li>
        <div class="d-flex mb10 li-listing">
          <div>
            <i class="material-icons">home</i>
          </div>
          <div class="last-child">
            <div><h6>House type</h6></div>
            <div><p><%= @listing.house_type %></p></div>
          </div>
      </div>
    </li>
      <li>
        <div class="d-flex mb10 li-listing">
          <div>
            <i class="material-icons">hotel</i>
          </div>
          <div class="last-child">
            <div><h6>Amount of bedrooms</h6></div>
            <div><p><%= @listing.bedrooms %></p></div>
          </div>
      </div>
    </li>
      <li>
        <div class="d-flex mb10 li-listing">
          <div>
            <i class="material-icons">hot_tub</i>
          </div>
          <div class="last-child">
            <div><h6>Amount of bathrooms</h6></div>
            <div><p><%= @listing.bathrooms %></p></div>
          </div>
      </div>
    </li>
      <li>
        <div class="d-flex mb10 li-listing">
          <div>
            <i class="material-icons">group</i>
          </div>
          <div class="last-child">
            <div><h6>Max. guests allowed</h6></div>
            <div><p><%= @listing.max_guests %></p></div>
          </div>
      </div>
    </li>
      <li>
        <div class="d-flex mb10 li-listing">
          <div>
            <i class="material-icons">euro_symbol</i>
          </div>
          <div class="last-child">
            <div><h6>Price per night</h6></div>
            <div><p><%= @listing.price %></p></div>
          </div>
      </div>
    </li>
    </ul>
    <hr>
      <div class="listings-title">
      <h6>Description</h6>
        <p>
          <%= @listing.description%>
          <%= Faker::Lorem.paragraph(sentence_count: 10) %>
        </p>
        <a href="#" class="btn btn-primary mt20">Book this island</a>
      </div>
    </div>
    <div class="col s4">
      <div class="listings-map">
        <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
     </div>
      </div>
    </div>
  </div>
</div>
