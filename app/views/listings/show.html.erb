<div class="show-wrapper">
<!--   <div class="row">
    <h4 class="ml20"><%=@listing.title%></h4>
  </div> -->
  <div class="row">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner h-100">
          <%@listing.photos.each_with_index do |photo, index|%>
          <div class="carousel-item <%= index.zero? ? 'active' : '' %>">
            <%= cl_image_tag photo.key, class: "d-block w-100 h-100", height: 800, crop: 'fill' %>
          </div>
          <%end%>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  <div class="row ml20">
    <div class="col s8">
      <div class="d-flex">
      <div class="flex-grow-1"><h6><%=@listing.title%> by full name </h6></div><div>avatar</div>
    </div>
    <hr>
    <ul>
      <div class="d-flex mb10"><li><i class="material-icons">home</i></li>
                <p class="ml10"><%=@listing.house_type%></p>
      </div>
      <div class="d-flex mb10"><li><i class="material-icons">hotel</i></li>
                <p class="ml10"><%=@listing.bedrooms%></p>
      </div>
      <div class="d-flex mb10"><li><i class="material-icons">hot_tub</i></li>
                <p class="ml10"><%=@listing.bathrooms%></p>
      </div>
      <div class="d-flex mb10"><li><i class="material-icons">group</i></li>
                <p class="ml10"><%=@listing.max_guests%></p>
      </div>
      <div class="d-flex mb10"><li><i class="material-icons">map</i></li>
                <p class="ml10"><%=@listing.address%></p>
      </div>
      <div class="d-flex mb10"><li><i class="material-icons">euro_symbol</i></li>
        <p class="ml10"><%=@listing.price%></p>
      </div>
    </ul>
    <hr>
    </div>
    <div class="col s4">
      <h6>Description</h6>
      <p><%=@listing.description%></p>
      <a href="/listings/<%=@listing.id%>/bookings/new" class="btn btn-primary">Book this island</a>
    </div>
  </div>
</div>
